#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int height;
    do{
        height = get_int("Height: ");
    }while(height < 1 || height > 8);


    for(int i = 0; i < height; i++){
        for(int y = 0; y < height - i - 1; y++){
            printf(" ");
        }
        for(int j = 0; j < i + 1; j++){
            printf("#");
        }
        for(int w = 0; w < 2; w++){
            printf(" ");
        }
        for(int r = 0; r < i + 1; r++){
            printf("#");
        }
        printf("\n");
    }
}
